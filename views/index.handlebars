<style>
  .burger-container {
    display: flex;
   
    flex-direction: column;
    align-items:center;
  }
  ul {
    list-style: none;
  }
.burger-list {
	width: 100%;
	display: flex;
	height:30px;
  flex-direction: column;
}

</style>


<h1 style="color:red; text-align:center">Eat-Da-Burger!</h1>

<div class="container">
 <div class=" row justify-content-center">
    <div class="col-4 ">
      {{#each burgers}}
    {{#unless devoured}}
        {{> burgers/burger-block devoured=1}}
    {{/unless}}
  {{/each}}
  </div>
    <div class="col-4">
      {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=0}}
    {{/if}}
  {{/each}}
    </div>
    <div class="w-100"></div>
    <div class="col-12" style="text-align:center">
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>



